<div class="login">
    <img id="logo" src="pics/blogo.png" alt="logo" width="200px">
    <br>
    <form name="myForm" onsubmit="return validateForm()" class="needs-validation" >
      <div class="form-group was-validated">
        <label class="form-label" for="email">DLSU Email address</label>
        <input class="form-control" type="email" id="email" name="email" required>
        <div class="invalid-feedback">
          Please enter your email address
        </div>
      </div>
      <div class="form-group was-validated">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" required>
        <div class="invalid-feedback">
          Please enter your password
        </div>
      </div>
      <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" id="check">
        <label class="form-check-label" for="check">Remember me</label>
      </div>
      <input class="btn btn-success w-100" type="submit" value="SIGN IN" onClick="login()">
      
    </form>
      <br>
      <div id="g_id_onload"
         data-client_id="255784655590-3l7dm5294nsslvsddv98s0oq0tceuhbm.apps.googleusercontent.com"
         data-login_uri="https://your.domain/your_login_endpoint"
         data-auto_prompt="false">
      </div>
      <div class="g_id_signin"
         data-type="standard"
         data-size="large"
         data-theme="outline"
         data-text="sign_in_with"
         data-shape="rectangular"
         data-callback="OnSuccess"
         data-logo_alignment="left">
      </div>
