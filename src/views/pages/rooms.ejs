<!DOCTYPE html>
<html lang="en">

<head>
  <!-- insert this for head files -->
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="css/myrooms.css">
    <link rel="stylesheet" href="css/navbar.css">
</head>

<body>
  <!-- insert this for navbar -->
    <%- include('../partials/navbar'); %>
    <div class="container">
    <h1><%= title1%></h1>
    <!-- <p class="summary">Date: 03-03-2023 TO 03-04-2023 for 21 students</p> -->

    <!-- loop for diplaying each rooms in file -->
    
    <% if(rooms.length > 0){ rooms.forEach(rooms => { %>
    <div class="cards">
      
      <div class="container-fluid">
        <div class="card mb-3 w-100" style="max-width: 1500px; background-color: lightgray;">
          <div class="row g-0">
            <div class="col-md-4" style="width:20%">
              <!-- image of room -->
              <img src="<%= rooms.img[0] %>" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body d-flex justify-content-between align-items-start">
                <div class="details">
                  <!-- showing short details of per room -->
                  <h4 class="card-title"><%= rooms.room_num %></h4>
                  <p class="card-text">LOCATION: <%= rooms.location %></p>
                  <p class="card-text">FLOOR: <%= rooms.floor %></p>
                  <p class="card-text">MAX # GUESTS: <%= rooms.guest_num %></p>
                </div>
                <div class="room-actions">
                  <a href="/rooms/<%= rooms._id %>?dateto=<%=datenow%>&datefrom=<%=datenow%>&dayCheck=Monday,Tuesday,Wednesday,Thursday,Friday,Saturday"><button class="green-btn" onclick="window.location.href='/<%= rooms._id %>' ;"> AVAILABLE </button></a>
                </div> 
              </div>
            </div>
          </div>
        </div>
      </div>
      <% })} else { %>
        <h2 style="color: black">No rooms available </h2>
      <% }%>
    </div>
    <script src="js/myrooms.js"></script>
</body>

</html>